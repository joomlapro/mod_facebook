<?xml version="1.0" encoding="utf-8" ?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_facebook</name>
	<author>Bruno Batista</author>
	<creationDate>Jun 2013</creationDate>
	<copyright>Copyright (C) 2013 AtomTech, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bruno@atomtech.com.br</authorEmail>
	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>1.0</version>
	<description>MOD_FACEBOOK_XML_DESCRIPTION</description>
	<scriptfile />
	<files>
		<filename module="mod_facebook">mod_facebook.php</filename>
		<filename>index.html</filename>
		<filename>mod_facebook.xml</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_facebook.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_facebook.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_facebook.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_facebook.sys.ini</language>
	</languages>
	<config>
		<fields
			name="params">
			<fieldset
				name="basic">
				<field
					name="url"
					type="url"
					filter="url"
					label="MOD_FACEBOOK_FIELD_URL_LABEL"
					description="MOD_FACEBOOK_FIELD_URL_DESC" />
				<field
					name="width"
					type="text"
					size="40"
					class="inputbox"
					default="292"
					label="MOD_FACEBOOK_FIELD_WIDTH_LABEL"
					description="MOD_FACEBOOK_FIELD_WIDTH_DESC" />
				<field
					name="height"
					type="text"
					size="40"
					class="inputbox"
					label="MOD_FACEBOOK_FIELD_HEIGHT_LABEL"
					description="MOD_FACEBOOK_FIELD_HEIGHT_DESC" />
				<field
					name="show_faces"
					type="radio"
					class="btn-group"
					default="1"
					filter="integer"
					label="MOD_FACEBOOK_FIELD_SHOW_FACES_LABEL"
					description="MOD_FACEBOOK_FIELD_SHOW_FACES_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="color_scheme"
					type="list"
					default="light"
					class="inputbox"
					size="1"
					filter="string"
					label="MOD_FACEBOOK_FIELD_COLOR_SCHEME_LABEL"
					description="MOD_FACEBOOK_FIELD_COLOR_SCHEME_DESC">
					<option value="light">MOD_FACEBOOK_OPTION_LIGHT</option>
					<option value="dark">MOD_FACEBOOK_OPTION_DARK</option>
				</field>
				<field
					name="stream"
					type="radio"
					class="btn-group"
					default="1"
					filter="integer"
					label="MOD_FACEBOOK_FIELD_STREAM_LABEL"
					description="MOD_FACEBOOK_FIELD_STREAM_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="show_border"
					type="radio"
					class="btn-group"
					default="1"
					filter="integer"
					label="MOD_FACEBOOK_FIELD_SHOW_BORDER_LABEL"
					description="MOD_FACEBOOK_FIELD_SHOW_BORDER_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="header"
					type="radio"
					class="btn-group"
					default="1"
					filter="integer"
					label="MOD_FACEBOOK_FIELD_HEADER_LABEL"
					description="MOD_FACEBOOK_FIELD_HEADER_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option value="itemid" />
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
